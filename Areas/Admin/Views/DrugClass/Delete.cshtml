@model DrugClass
@{
    ViewBag.Title = "Delete Drug Class";
}

<h1>Confirm Deletion</h1> <!-- h1 header -->
<h3>@Model.Name</h3> <!-- display selected drug class -->

<!-- form to confirm deletion of selected drug class -->
<form asp-action="Delete" method="post">
    <input type="hidden" asp-for="DrugClassId" />
    <button type="submit" class="btn btn-primary">Delete</button>
    <a asp-action="List" class="btn btn-primary">Cancel</a>
</form>