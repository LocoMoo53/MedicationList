@model List<DosageForm>
@{
    ViewBag.Title = "Dosage Form Manager";
}

<h1>@ViewBag.Title</h1> <!-- h1 header -->
<div>
    <!-- table listing dosage forms w/ update & delete options -->
    <table class="table table-bordered table-striped">
        <thead>
            <tr>
                <th>Name</th>
                <th></th>
                <th></th>
        </thead>
        <tbody>
            <!-- loop through & display dosage forms -->
            @foreach (var dosageForm in Model)
            {
                <tr>
                    <td>@dosageForm.Name</td>
                    <td>
                        <a asp-action="Update"
                           asp-route-id="@dosageForm.DosageFormId">Update</a>
                    </td>
                    <td>
                        <a asp-action="Delete"
                           asp-route-id="@dosageForm.DosageFormId">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
    <!-- button for adding new dosage form -->
    <a asp-action="Add" class="btn btn-primary">Add New Dosage Form</a>
</div>